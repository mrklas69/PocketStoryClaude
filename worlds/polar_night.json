{
  "name": "Chronicle of the Polar Night Dynasty",
  "description": "The reign of King Harold and Queen Indrid, and the wandering of Princess Freya. Somewhere in the forest, a sealed flask changes hands.",
  "entities": [
    {
      "id": "KINGDOM",
      "name": "Kingdom of the Polar Night",
      "type": "ENVI",
      "description": "A frozen realm where the sun hides for half the year. Ruled by iron will and older laws."
    },
    {
      "id": "CASTLE",
      "name": "Frostkeep Castle",
      "type": "ENVI",
      "description": "The ancestral seat of the Polar dynasty. Cold stone, warm fires, older secrets.",
      "capacity": 40
    },
    {
      "id": "THRONE_ROOM",
      "name": "Throne Room",
      "type": "ENVI",
      "description": "Where Harold judges, rules, and occasionally naps on the throne.",
      "capacity": 10
    },
    {
      "id": "GREAT_HALL",
      "name": "Great Hall",
      "type": "ENVI",
      "description": "Feasts, councils, and whispered conspiracies beneath mounted antlers.",
      "capacity": 20
    },
    {
      "id": "ROYAL_VAULT",
      "name": "Royal Vault",
      "type": "ENVI",
      "description": "Sealed with the Iron Key. Contains the dynasty's wealth and a few regrets.",
      "capacity": 8
    },
    {
      "id": "FOREST",
      "name": "Whispering Forest",
      "type": "ENVI",
      "description": "Ancient trees, deeper darkness than the polar night itself. Freya knows its paths.",
      "capacity": 5
    },
    {
      "id": "HAROLD",
      "name": "King Harold",
      "type": "CHAR",
      "description": "Weathered, stern, and secretly afraid of spiders. Has ruled for thirty-one winters.",
      "hp": 90,
      "hp_max": 100
    },
    {
      "id": "INDRID",
      "name": "Queen Indrid",
      "type": "CHAR",
      "description": "Wise beyond her years. Knows three languages, six poisons, and one forbidden spell.",
      "hp": 75,
      "hp_max": 100
    },
    {
      "id": "FREYA",
      "name": "Princess Freya",
      "type": "CHAR",
      "description": "Seventeen, heir to the throne, currently missing from court. Probably on purpose.",
      "hp": 100,
      "hp_max": 100
    },
    {
      "id": "BYGUL",
      "name": "Bygul",
      "type": "CHAR",
      "description": "Freya's kitten — named after the bee-gold of old Norse lore. Uncommonly calm for a creature raised among warriors. Its amber eyes hold no judgment, only warmth.",
      "hp": 20,
      "hp_max": 20
    },
    {
      "id": "CROWN_IRON",
      "name": "Iron Crown of the North",
      "type": "UNIQUE",
      "description": "Forged from a fallen star. Heavy enough to humble any king."
    },
    {
      "id": "SWORD_FROSTBITE",
      "name": "Frostbite",
      "type": "UNIQUE",
      "description": "A legendary blade that never rusts. Allegedly drinks cold."
    },
    {
      "id": "STAFF_INDRID",
      "name": "Indrid's Staff",
      "type": "UNIQUE",
      "description": "Carved from a single piece of northern ash. Hums faintly in snowstorms."
    },
    {
      "id": "FREYA_DAGGER",
      "name": "Silver Dagger",
      "type": "UNIQUE",
      "description": "A gift from her father on her twelfth birthday. She uses it constantly."
    },
    {
      "id": "KEY_VAULT",
      "name": "Iron Key",
      "type": "UNIQUE",
      "description": "Opens the Royal Vault. Harold keeps it under his pillow, which worries everyone."
    },
    {
      "id": "WILDFIRE_OIL",
      "name": "Wildfire Oil",
      "type": "UNIQUE",
      "description": "A sealed clay flask found on a dead wanderer's satchel deep in the forest. Southern trader marks on the wax seal. Freya does not know what it is. Indrid does — and her expression says she wishes Freya had left it in the snow."
    },
    {
      "id": "GOLD_COINS",
      "name": "Gold Coins",
      "type": "SUMS",
      "description": "Currency of the realm. Bears Harold's displeased face on one side."
    },
    {
      "id": "MANA_POTIONS",
      "name": "Mana Potions",
      "type": "SUMS",
      "description": "Indrid's personal reserve. Stored in the vault. Do not drink. She will know."
    }
  ],
